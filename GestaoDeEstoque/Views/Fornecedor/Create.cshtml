@model GestaoDeEstoque.Models.Fornecedor

@{
    ViewData["Title"] = "Adicionar Fornecedor";
}

<h1>Adicionar</h1>

<h4>Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group my-4">
                @* <input type="submit" value="Create" class="btn btn-primary" /> *@
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i>&nbsp;Salvar</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista de Fornecedores</a>
</div>

@section Scripts {

    <script>
        const mensagem = "@ViewData["Mensagem"]";

        if (mensagem != ""){
            Swal.fire({
                  title: "Fornecedor",
                  text: "Fornecedor adicionado com sucesso.",
                  icon: "success"
            }).then(willRedirect => {
                window.location.href = '@Url.Action("Index", "Fornecedor")';
            });
        }
    </script>
}
