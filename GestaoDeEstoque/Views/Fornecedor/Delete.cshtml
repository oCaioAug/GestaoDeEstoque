@model GestaoDeEstoque.Models.Fornecedor

@{
    ViewData["Title"] = "Apagar Fornecedor";
}

<h1>Apagar</h1>

<h3>Tem certeza que deseja apagar este fornecedor?</h3>
<div>
    <h4>Fornecedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @* <input type="submit" value="Delete" class="btn btn-danger" />  *@
        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i>&nbsp;Apagar</button>
        |
        <a asp-action="Index">Voltar à Lista de Fornecedores</a>
    </form>
</div>

@section Scripts {

    <script>
        const mensagem = "@ViewData["Mensagem"]";

        if (mensagem != ""){
            Swal.fire({
                  title: "Fornecedor",
                  text: "Fornecedor excluído com sucesso!",
                  icon: "info"
            }).then(willRedirect => {
                window.location.href = '@Url.Action("Index", "Fornecedor")';
            });
        }
    </script>
}
