@model GestaoDeEstoque.Models.Fornecedor

@{
    ViewData["Title"] = "Detales";
}

<h1>Details</h1>

<div>
    <h4>Fornecedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar à Lista de Fornecedores</a>
</div>

@section Scripts {

    <script>
        const mensagem = "@ViewData["Mensagem"]";

        if (mensagem != ""){
            Swal.fire({
                  title: "Fornecedor",
                  text: "Fornecedor excluído com sucesso!",
                  icon: "info"
            }).then(willRedirect => {
                window.location.href = '@Url.Action("Index", "Fornecedor")';
            });
        }
    </script>
}
