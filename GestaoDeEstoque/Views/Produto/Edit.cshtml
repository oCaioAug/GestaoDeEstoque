@model Produto

<h3>Cadastro de Produtos</h3>
<form method="post" asp-action="Edit" asp-controller="Produto" id="formProduto">
    <div class="d-flex" style="flex-direction:column;gap:20px">
        <input type="hidden" asp-for="@Model.Id" />

        <div class="form-group row" style="width:100%">
            <div class="col-md-2">
                <div>
                    <label asp-for="Nome" class="form-label"></label>
                </div>
                <div>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row" style="width:100%">
            <div class="col-md-2">
                <div>
                    <label asp-for="TipoProdutoId" class="form-label"></label>
                </div>
                <div>
                    <select asp-for="TipoProdutoId" class="form-select" asp-items="@ViewBag.TipoProdutoId">
                        <option value="">Selecione um tipo de produto</option>
                    </select>
                    <span asp-validation-for="TipoProdutoId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row" style="width:100%">
            <div class="col-md-2">
                <div>
                    <label asp-for="FornecedorId" class="form-label"></label>
                </div>
                <div>
                    <select asp-for="FornecedorId" class="form-select" asp-items="@ViewBag.FornecedorId">
                        <option value="">Selecione um fornecedor</option>
                    </select>
                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row" style="width:100%">
            <div class="col-md-2">
                <div>
                    <label asp-for="PrazoDeValidade" class="form-label"></label>
                </div>
                <div>
                    <input asp-for="PrazoDeValidade" class="form-control" type="date" />
                    <span asp-validation-for="PrazoDeValidade" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row" style="width:100%">
            <div class="col-md-2">
                <div>
                    <label asp-for="Preco" class="form-label"></label>
                </div>
                <div>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row" style="width:100%">
            <div class="col-md-2">
                <div>
                    <label asp-for="Quantidade" class="form-label"></label>
                </div>
                <div>
                    <input asp-for="Quantidade" class="form-control" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row" style="width:100%">
            <div class="col-md-2">
                <div>
                    <label asp-for="Observacao" class="form-label"></label>
                </div>
                <div>
                    <input asp-for="Observacao" class="form-control" />
                    <span asp-validation-for="Observacao" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i>&nbsp;Editar</button>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const mensagem = "@ViewData["Mensagem"]";
        if (mensagem != "") {
            Swal.fire({
                title: "Editado!",
                text: "Produto editado com sucesso!!",
                icon: "success"
            });
        }
    </script>
}