@model GestaoDeEstoque.Models.TipoProduto

@{
    ViewData["Title"] = "Apagar Tipo de Produto";
}

<h1>Apagar</h1>

<h3>Tem certeza que deseja este Tipo de Produto?</h3>
<div>
    <h4>Tipo de Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à Lista de Tipos de Produto</a>
    </form>
</div>
