@model GestaoDeEstoque.Models.TipoProduto

@{
    ViewData["Title"] = "Apagar Tipo de Produto";
}

<h1>Apagar</h1>

<h3>Tem certeza que deseja este Tipo de Produto?</h3>
<div>
    <h4>Tipo de Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i>&nbsp;Apagar</button>
        <a asp-action="Index">Voltar à Lista de Tipos de Produto</a>
    </form>
</div>

@section Scripts {

    <script>
        const mensagem = "@ViewData["Mensagem"]";

        if (mensagem != ""){
            Swal.fire({
                  title: "Excluído!",
                  text: "Tipo de Produto foi excluído com sucesso!!",
                  icon: "info"
            }).then(willRedirect => {
                window.location.href = '@Url.Action("Index", "TipoProduto")';
            });
        }
    </script>
}